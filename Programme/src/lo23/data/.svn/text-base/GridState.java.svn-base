package lo23.data;

import lo23.data.pieces.GamePiece;

/**
 * This class contains a grid's state, with the move supposed to update this state
 */
public class GridState
{
    private GamePiece[][] grid;
    private Move move;


    /**
     * Default constructor
     * @param grid The grid
     * @param move The move
     */
    public GridState(GamePiece[][] grid, Move move)
    {
        this.grid = grid;
        this.move = move;
    }


    /**
     * Returns the grid's state
     * @return The grid's state
     */
    public GamePiece[][] getGrid()
    {
        return this.grid;
    }

    /**
     * Returns the move
     * @return The move
     */
    public Move getMove()
    {
        return this.move;
    }
}
